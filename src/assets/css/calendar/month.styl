@import './variables.styl';
@import '../colors.styl';

.rbc-row {
  display: flex;
  flex-direction: row;
}

.rbc-row-segment {
  padding: 0 1px 1px 1px;

  .rbc-event-content {
    @extends .rbc-ellipsis;
  }
}

.rbc-selected-cell {
  background-color: selection-bg-color;
  color: selection-color;
  opacity: 0.05
}



.rbc-show-more {
  @extends .rbc-ellipsis;
  background-color: rgba(255, 255, 255, 0.3);
  z-index: event-zindex;
  font-weight: bold;
  font-size: 85%;
  height: auto;
  line-height: normal;
  white-space: nowrap;
}

.rbc-month-view {
  position: relative;
  display: flex;
  flex-direction: column;
  flex: 1 0 0;
  width: 100%;

  height: 100%; // ie-fix

  .rbc-header {

  }

  .rbc-header + .rbc-header {
    border-left: 1px solid menuBorder;
  }

  .rbc-rtl & .rbc-header + .rbc-header {
    border-left-width: 0;
    border-right: 1px solid menuBorder;
  }
}

.rbc-month-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: greyBg;
  max-height: 30px;
  height: 100%;
  border-bottom: 1px solid menuBorder;
}

.rbc-month-row {
  display: flex;
  position: relative;
  justify-content: center;
  flex-direction: column;
  flex: 1 0 0;
  overflow: hidden;

  height: 100%; // ie-fix

  & + & {
    border-top: 1px solid menuBorder;
  }
}

.rbc-date-cell {
  padding-right: 5px;
  text-align: center;
  position:relative;
  &.rbc-now {
    font-weight: bold;

    &::after {
      content: ' ';
      height: 8px;
      width: 8px;
      background: iconColor;
      display: block;
      position: absolute;
      left: calc(50% - 6px);
      top: 145%;
      border-radius: 50%;
    }
  }

  &.rbc-current > a {

    background: iconColor;
    color: #fff;
    padding: 5px;
    border-radius: 50%;
  }

  > a {
    &, &:active, &:visited {
      color: inherit;
      text-decoration: none;
    }
  }
}

.rbc-row-content {
  position: relative;
  z-index: 4;
}

.rbc-row-bg {
  @extends .rbc-abs-full;
  display: flex;
  flex-direction: row;
  flex: 1 0 0;
  overflow: hidden;
}

.rbc-day-bg {
  & + & {
    border-left: 1px solid menuBorder;
  }

  .rbc-rtl & + & {
    border-left-width: 0;
    border-right: 1px solid menuBorder;
  }

  &:nth-of-type(1), &:nth-of-type(7) {
    background: greyBg;
  }
}

.rbc-overlay {
  position: absolute;
  z-index: event-zindex + 1;
  border: 1px solid #e5e5e5;
  background-color: #fff;
  box-shadow: 0 5px 15px rgba(0,0,0,.25);
  padding: 10px;

  > * + * {
    margin-top: 1px;
  }
}

.rbc-overlay-header {
  border-bottom: 1px solid #e5e5e5;
  margin: -10px -10px 5px -10px ;
  padding: 2px 10px;
}

@media only screen and (max-width : 414px) {
    .rbc-date-cell {

        &.rbc-current > a {
            padding: 1px;
        }

        &.rbc-now {
            &::after {
            content: ' ';
            height: 8px;
            width: 8px;
            background: iconColor;
            display: block;
            position: absolute;
            left: calc(50% - 6px);
            top: 110%;
            border-radius: 50%;
            }
        }

    }
}